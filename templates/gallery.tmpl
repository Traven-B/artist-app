{{define "gallery_page"}}
<!DOCTYPE html>
<html>
<body>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"><!-- alpine.js -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="/static/daft.css" rel="stylesheet">
    <link href="/static/daft-overrides.css" rel="stylesheet"><!-- site-measure.css does the grid for gallery at the moment -->
    <link href="/static/site-measure.css" rel="stylesheet">
    <title>Gallery</title>
  </head>
  <div class="site">
    <div class="site-wrap">
      <header class="site-header">
        <span class="site-title">Artist&nbsp;Gallery</span>
        <nav class="site-nav">
          <a href="/">Add Artist</a> <a href="/gallery">Gallery</a> <a href="https://www.artbreeder.com/browse?modelNames=collage.&amp;sort=trending" target="_blank">Artbreeder</a>
        </nav>
      </header>
      <div class="wide-where-grid-goes">
        <div class="grid-container" id="gallery-grid">
          {{range .Artists}}
            {{template "grid_item" .}}
          {{end}}
        </div>
      </div>

      <!-- Add this: Persistent Edit Form Area -->
      <section id="edit-section" style="padding: 2rem; background: #f9f9f9; border-top: 1px solid #ccc; margin-top: 2rem;">
        <h3>Edit Artist Details</h3>
        <div id="edit-form-target">
            <p>Click "edit" on a card above to load its data here.</p>
        </div>
      </section>


<!-- Alpine workspace -->
<div x-data @artist-deleted.window="$store.promptStore.remove($event.detail.id)">

  <div style="text-align:center; padding:1rem;">
    <button class="outline" @click="$store.promptStore.clear()">Clear All</button>
    <button class="contrast" @click="$store.promptStore.copyPrompt()">Copy Checked</button>
  </div>

  <div style="display:flex; gap:1rem; align-items:flex-start; min-height: 720px;">

    <!-- bottom list -->
    <div id="art-by-output"
         style="flex:1; padding:1rem; background:#f0f0f0;">

      <template x-for="(artist, index) in $store.promptStore.selectedArtists" :key="artist.id">
        <div style="display:flex; align-items:center; margin-bottom:0.5rem;">

          <!-- radio (focus) -->
          <input type="radio"
                 name="focusedArtist"
                 :checked="$store.promptStore.focusedId === artist.id"
                 @change="$store.promptStore.focusedId = artist.id"
                 style="margin-right:0.4rem;">

          <!-- checkbox (include in prompt) -->
          <input type="checkbox"
                 x-model="artist.checked"
                 style="margin-right:0.5rem; transform:scale(1.2);">

          <a style="flex:1; display:block;"
             :href="'#artist-' + artist.id"
             x-text="'art by ' + artist.name + ','"></a>

          <button class="secondary"
                  @click="$store.promptStore.moveUp(index)"
                  :disabled="index === 0"
                  style="margin-left:0.5rem;">↑</button>

          <button class="secondary"
                  @click="$store.promptStore.moveDown(index)"
                  :disabled="index === $store.promptStore.selectedArtists.length - 1"
                  style="margin-left:0.25rem;">↓</button>

          <button class="secondary"
                  @click="$store.promptStore.remove(artist.id)"
                  style="margin-left:0.25rem; color:red;">X</button>
        </div>
      </template>
    </div>

    <!-- preview panel -->
    <div style="width:460px;"
         x-show="$store.promptStore.focusedArtist"
         x-transition>

      <img :src="$store.promptStore.focusedArtist?.thumb"
            style="width:120px;">

      <strong x-text="$store.promptStore.focusedArtist?.name"></strong>
      <p x-text="$store.promptStore.focusedArtist?.desc"></p>

      <a :href="$store.promptStore.focusedArtist?.google"
         target="_blank">
        Google artist
      </a>
    </div>

  </div>
</div>
</div>
</div>



<script>
document.addEventListener('alpine:init', () => {
  Alpine.store('promptStore', {
    selectedArtists: [],
    focusedId: null,

    get focusedArtist() {
      return this.selectedArtists.find(a => a.id === this.focusedId)
    },

    toggle(artist) {
      const idx = this.selectedArtists.findIndex(a => a.id === artist.id)
      if (idx === -1) {
        this.selectedArtists.push({ ...artist, checked: true })
        if (!this.focusedId) this.focusedId = artist.id
      } else {
        this.selectedArtists.splice(idx, 1)
        if (this.focusedId === artist.id) {
          this.focusedId = this.selectedArtists.length ? this.selectedArtists[0].id : null
        }
      }
    },

    remove(id) {
      this.selectedArtists = this.selectedArtists.filter(a => a.id !== id)
      if (this.focusedId === id) {
        this.focusedId = this.selectedArtists.length ? this.selectedArtists[0].id : null
      }
    },

    moveUp(i) {
      if (i > 0) [this.selectedArtists[i-1], this.selectedArtists[i]] = [this.selectedArtists[i], this.selectedArtists[i-1]]
    },

    moveDown(i) {
      if (i < this.selectedArtists.length - 1) [this.selectedArtists[i], this.selectedArtists[i+1]] = [this.selectedArtists[i+1], this.selectedArtists[i]]
    },

    clear() {
      this.selectedArtists = []
      this.focusedId = null
    },

    copyPrompt() {
      const text = this.selectedArtists
        .filter(a => a.checked)
        .map(a => `art by ${a.name},`)
        .join('\n')
      navigator.clipboard.writeText(text)
    }
  })
})
</script>
</body>
</html>
{{end}}

{{define "grid_item"}}
<div class="grid-item" id="artist-{{.ID}}"
     x-data="{
        showActions: false,
        artist: {
            id: '{{.ID}}',
            name: '{{.Name | js}}',
            desc: '{{.Description | js}}',
            thumb: '/images/{{if .Thumb}}{{.Thumb}}{{else}}{{.ID}}.jpg{{end}}',
            google: 'https://www.google.com/search?q=art+by+{{.Name | urlquery}}'
        }
     }">
  <div class="grid-item-image">
    <img :src="artist.thumb" :alt="artist.name" loading="lazy">
  </div>
  <div class="grid-item-content">
    <h3 class="grid-item-title">
      <input type="checkbox"
             class="artist-checkbox"
             :checked="$store.promptStore.selectedArtists.some(a => a.id === artist.id)"
             @change="$store.promptStore.toggle(artist)">
      <a :href="artist.google" target="_blank">{{.Name}}</a>
    </h3>
    <p class="grid-item-description">{{.Description}}
      <a href="#" @click.prevent="showActions = !showActions" class="action-trigger">⋯</a>
    </p>
    <div x-show="showActions" @click.away="showActions = false" class="action-links">
      <a href="#edit-section"
         hx-get="/artists/edit/{{.ID}}"
         hx-target="#edit-form-target"
         class="action-link">edit</a><br>
      <a href="#"
         hx-post="/artists/delete/{{.ID}}"
         hx-target="closest .grid-item"
         hx-swap="outerHTML"
         class="action-link"
         style="color: red;">delete</a>
    </div>
  </div>
</div>
{{end}}

{{define "edit_form_content"}}
<form hx-post="/artists/update/{{.ID}}" hx-target="#artist-{{.ID}}" hx-swap="outerHTML">
    <div style="display: grid; gap: 1rem;">
        <label>Name: <input type="text" name="name" value="{{.Name}}">
        {{if .NameMsg}}
            <small class="form-help">{{.NameMsg}}</small>
        {{end}}
        </label>
        <label>Description: <textarea name="desc" rows="3">{{.Description}}</textarea>
        {{if .DescMsg}}
            <small class="form-help">{{.DescMsg}}</small>
        {{end}}
        </label>
        <label>Image URL: <input type="text" name="img_url" value="{{.ImgURL}}"></label>
        <div style="display: flex; gap: 0.5rem;">
            <button type="submit">Save Changes</button>
            <button type="button" class="secondary" onclick="document.getElementById('edit-form-target').innerHTML = '<p>Edit cancelled.</p>'">Cancel</button>
        </div>
    </div>
</form>
{{end}}
