{{define "index"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <link href="static/daft.css" rel="stylesheet" />
    <link href="static/daft-overrides.css" rel="stylesheet" />
    <link href="static/main.css" rel="stylesheet" />

    <title>Add Artist</title>
</head>
<body>

  <!-- Header / Navigation -->
  <header class="container">
    <nav>
      <ul class="title">
        <li><strong>Add Artist</strong></li>
      </ul>
      <ul class="links">
        <li><a href="/">Add Artist</a></li>
        <li><a href="/gallery">Gallery</a></li>
        <li><a href="https://www.artbreeder.com/browse?modelNames=collage.&sort=trending" target="_blank">Artbreeder</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main Measure -->
  <div class="measure add-artist-page">

    <!-- Artist To-Add List -->
    <div>
      <h2>Artists To Add</h2>
      <div style="display: flex; gap: 4px; margin-bottom: 8px;">
        <textarea 
            id="bulk-names" 
            name="names" 
            rows="1" 
            placeholder="Artist name(s)..." 
            style="flex-grow: 1; min-height: 1.5rem; vertical-align: middle;"></textarea>
        <button 
            type="button"
            hx-post="/add-to-todo-list" 
            hx-include="#bulk-names" 
            hx-target="#todo-list" 
            hx-on::after-request="document.getElementById('bulk-names').value=''">
            Add
        </button>
      </div>
      <ul id="todo-list">
        {{template "todo_list_items" .}}
      </ul>
    </div>

    <!-- Artist Form -->
    <div class="artist-form">
      <div id="artist-form">
        {{template "artist_form" .}}
      </div>
    </div>

  </div> <!-- end measure -->

  <!-- Dialog (static for now) -->
  {{template "confirm_dialog" .}}

</body>
</html>
{{end}}
